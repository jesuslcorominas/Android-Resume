<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextView.Body">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Body.CardView">
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="TextView.Body.CardView.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Body.CardView.Clickable">
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="TextView.Header">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_xxxlarge</item>
    </style>

    <style name="TextView.Error">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_xxlarge</item>
        <item name="android:layout_marginLeft">@dimen/margin_xxlarge</item>
        <item name="android:layout_marginRight">@dimen/margin_xxlarge</item>
        <item name="android:layout_marginStart">@dimen/margin_xxlarge</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Button">

    </style>

    <style name="Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="Button.Borderless.Circular">
        <item name="android:background">@drawable/selectable_item_background_circular</item>
    </style>

    <style name="Button.Borderless.Circular.SideMenu">
        <item name="android:layout_width">@dimen/side_menu_image_button</item>
        <item name="android:layout_height">@dimen/side_menu_image_button</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CustomCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="CustomCardViewContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/margin</item>
    </style>
</resources>