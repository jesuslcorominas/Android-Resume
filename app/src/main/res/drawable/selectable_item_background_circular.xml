<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/accent_translucent" />
            <padding android:bottom="@dimen/margin" android:left="@dimen/margin" android:right="@dimen/margin" android:top="@dimen/margin" />
        </shape>

    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/transparent" />
            <padding android:bottom="@dimen/margin" android:left="@dimen/margin" android:right="@dimen/margin" android:top="@dimen/margin" />
        </shape>
    </item>
</selector>