<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_knowledge_imageView_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/knowledge_image_description"
            android:padding="@dimen/margin_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/margin">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_knowledge_textView_name"
                style="@style/TextView.Body.CardView.SingleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Android Studio" />

            <ProgressBar xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/item_knowledge_progressBar_level"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_height"
                android:progressDrawable="@drawable/progress_gradient"
                tools:max="4"
                tools:progress="3" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>