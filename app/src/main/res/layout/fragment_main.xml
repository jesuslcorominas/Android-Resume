<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxlarge">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@color/dark_gray"
            android:orientation="vertical"
            android:paddingTop="64dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/navigationView_main_header_imageView_avatar"
            android:layout_width="@dimen/menu_image"
            android:layout_height="@dimen/menu_image"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/menu_image_border"
            tools:src="@drawable/yo" />


    </FrameLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/fragment_main_cardView_email"
        style="@style/CustomCardView">

        <LinearLayout style="@style/CustomCardViewContentLayout">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragment_main_textView_email"
                style="@style/TextView.Body.CardView.SingleLine" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_main_cardView_phone"
        style="@style/CustomCardView">

        <LinearLayout style="@style/CustomCardViewContentLayout">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragment_main_textView_phone"
                style="@style/TextView.Body.CardView.SingleLine" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_main_cardView_summary"
        style="@style/CustomCardView">

        <LinearLayout style="@style/CustomCardViewContentLayout">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragment_main_textView_summary"
                style="@style/TextView.Body.CardView.Clickable" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>